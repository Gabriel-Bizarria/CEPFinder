<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SimpleTextViewBlack" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/coolvetica_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SimpleTextViewGray" parent="SimpleTextViewBlack">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="AppTheme.MenuLabel" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/coolvetica_regular</item>
        <item name="backgroundTint">@color/secondary_yellow</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MainTextStyleBlack" parent="SimpleTextViewBlack">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MainTextStyleGray" parent="SimpleTextViewGray">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/button_selector</item>
    </style>
</resources>